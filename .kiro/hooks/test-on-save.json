{
  "name": "Run Tests on Save",
  "description": "Automatically run relevant tests when TypeScript files are saved",
  "trigger": {
    "type": "file_save",
    "pattern": "**/*.{ts,tsx}"
  },
  "action": {
    "type": "shell_command",
    "command": "npm test -- --testPathPattern={{file_path}} --passWithNoTests",
    "workingDirectory": "{{workspace_root}}"
  },
  "enabled": true,
  "conditions": [
    {
      "type": "file_exists",
      "path": "package.json"
    }
  ]
}